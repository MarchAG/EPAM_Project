@model FileCabinet.Models.Register

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true);
        <div>
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>
        <div>
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div>
            @Html.LabelFor(m => m.ConfPassword)
            @Html.PasswordFor(m => m.ConfPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfPassword)
        </div>
        <div>
            @Html.LabelFor(m => m.EMail)
            @Html.TextBoxFor(m => m.EMail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EMail)
        </div>
        <input type="submit" class=" btn btn-success" name=" login" />
    }
</div>

